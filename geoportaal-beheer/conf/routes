# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Index.index()
GET		/user/login					controllers.User.login(r: String)
GET		/user/logout				controllers.User.logout()
POST	/user/authenticate			controllers.User.authenticate()
GET		/create						controllers.MetadataDC.renderCreateForm()
POST	/createSubmit				controllers.MetadataDC.createSubmit()
GET		/edit/:metadataUuid			controllers.MetadataDC.renderEditForm(metadataUuid: String)
POST	/editSubmit/:metadataUuid	controllers.MetadataDC.editSubmit(metadataUuid: String)
GET		/editStatus/:datasetId		controllers.Index.changeStatus(datasetId: Integer, status: String)
GET		/editSupplier/:datasetId	controllers.Index.changeSupplier(datasetId: Integer, supplier: String)
GET		/cancel						controllers.MetadataDC.cancel()
GET		/delete/:datasetId			controllers.Index.deleteMetadata(datasetId: Integer)
POST	/search						controllers.Index.search()
POST	/validate/:metadataUuid		controllers.MetadataDC.validateForm(metadataUuid: String)
POST	/validate					controllers.Index.validateForm()
GET		/routes.js					controllers.Index.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
