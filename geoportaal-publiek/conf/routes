# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET			/						controllers.Index.index
GET			/search					controllers.Index.search(start: Int ?= 0, types: String ?= "dataset+service+dc", filter: Boolean ?= false)
GET			/browse					controllers.Index.browse(start: Int ?= 0, subjects: String ?= "inlandWaters+structure+society+economy+biota+geoscientificInformation+health+boundaries+elevation+climatologyMeteorologyAtmosphere+farming+location+intelligenceMilitary+environment+utilitiesCommunication+oceans+imageryBaseMapsEarthCover+planningCadastre+transportation", filter: Boolean ?= false)
GET			/contact				controllers.Index.contact
GET			/about					controllers.Index.about

GET			/routes.js				controllers.Index.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET			/assets/*file			controllers.Assets.versioned(path="/public", file: Asset)
